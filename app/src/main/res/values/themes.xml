<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MySplashscreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground_adaptive</item>
        <item name="postSplashScreenTheme">@android:style/Theme.DeviceDefault.NoActionBar</item>
    </style>

    <style name="Theme.OSTTools" parent="Theme.Material3.Dark.NoActionBar"/>
    <style name="Theme.OSTTools.AppWidgetContainerParent"
        parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.OSTTools.AppWidgetContainer"
        parent="Theme.OSTTools.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>